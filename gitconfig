[alias]
  c = commit -m
  a = add
  pl = pull
  ps = push
  st = status
  br = branch
  type = cat-file -t
  dump = cat-file -p
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  ac = commit -am
  pr = pull --rebase
  prm = pull --rebase origin master
  lone = log --oneline
  co = checkout
  m = merge
  s = stash
  sp = stash pop
  sl = stash list
  cb = checkout -b
  psm = push origin master
  amend = commit --amend -m
  psf = push origin dev.faezrah
  prf = pull --rebase origin dev.faezrah
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
  amend = commit --amend -m
  undo = reset --soft HEAD~1
  count = rev-list --count HEAD
  showfiles = show --pretty="" --name-only
[color]
  ui = true
[color "branch"]
  remote = white reverse
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  new = green bold
[color "status"]
  added = yellow bold
  changed = green
  untracked = cyan
